<features>
  <feature
    name="persistence-aries-hibernate"
    version="${version}">

    <!-- JTA -->
    <config name="org.apache.aries.transaction">
      aries.transaction.recoverable = true
      aries.transaction.timeout = 600
      aries.transaction.howl.logFileDir =
      ${karaf.data}/txlog
      aries.transaction.howl.maxLogFiles = 2
      aries.transaction.howl.maxBlocksPerFile = 512
      aries.transaction.howl.bufferSizeKBytes = 4
    </config>
    <bundle>mvn:org.apache.geronimo.specs/geronimo-jta_1.1_spec/1.1.1</bundle>
    <bundle>mvn:org.apache.aries.transaction/org.apache.aries.transaction.blueprint/1.0.1</bundle>
    <bundle>mvn:org.apache.aries.transaction/org.apache.aries.transaction.manager/1.1.0</bundle>

    <!-- JPA -->
    <bundle>mvn:org.apache.geronimo.specs/geronimo-jpa_2.0_spec/1.1</bundle>
    <bundle>mvn:org.apache.aries/org.apache.aries.util/1.0.0</bundle>
    <bundle>mvn:org.apache.aries.jpa/org.apache.aries.jpa.api/1.0.0</bundle>
    <bundle>mvn:org.apache.aries.jpa/org.apache.aries.jpa.blueprint.aries/1.0.1</bundle>
    <bundle>mvn:org.apache.aries.jpa/org.apache.aries.jpa.container/1.0.0</bundle>
    <bundle>mvn:org.apache.aries.jpa/org.apache.aries.jpa.container.context/1.0.1</bundle>

    <!-- JNDI -->
    <bundle>mvn:org.apache.aries.jndi/org.apache.aries.jndi.api/1.0.0</bundle>
    <bundle>mvn:org.apache.aries.jndi/org.apache.aries.jndi.core/1.0.0</bundle>
    <bundle>mvn:org.apache.aries.jndi/org.apache.aries.jndi.rmi/1.0.0</bundle>
    <bundle>mvn:org.apache.aries.jndi/org.apache.aries.jndi.url/1.0.0</bundle>
    <bundle>mvn:org.apache.aries.jndi/org.apache.aries.jndi.legacy.support/1.0.0</bundle>

    <!-- JDBC Driver -->
    <bundle>mvn:org.hsqldb/hsqldb/2.3.0</bundle>

    <!-- Hibernate -->
    <bundle>mvn:com.fasterxml/classmate/0.9.0</bundle>
    <bundle>mvn:org.apache.geronimo.specs/geronimo-servlet_3.0_spec/1.0</bundle>
    <bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.antlr/2.7.7_5</bundle>
    <bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.ant/1.8.2_2</bundle>
    <bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.dom4j/1.6.1_5</bundle>
    <bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.serp/1.14.1_1</bundle>
    <bundle>mvn:org.javassist/javassist/3.18.1-GA</bundle>
    <bundle>mvn:org.jboss.spec.javax.security.jacc/jboss-jacc-api_1.4_spec/1.0.2.Final</bundle>
    <bundle>wrap:mvn:org.jboss/jandex/1.1.0.Final</bundle>
    <bundle>mvn:org.jboss.logging/jboss-logging/3.1.3.GA</bundle>

    <bundle>mvn:org.hibernate.common/hibernate-commons-annotations/4.0.4.Final</bundle>
    <bundle>mvn:org.hibernate/hibernate-core/4.2.7.Final</bundle>
    <bundle>mvn:org.hibernate/hibernate-entitymanager/4.2.7.Final</bundle>

    <!-- This shouldn't be available in a feature -->
    <!-- <bundle>mvn:com.github.pires.example/datasource-hsqldb/0.1-SNAPSHOT</bundle> -->
    <!-- <bundle>mvn:com.github.pires.example/dal/0.1-SNAPSHOT</bundle> -->
    <!-- <bundle>mvn:com.github.pires.example/dal-impl/0.1-SNAPSHOT</bundle> -->

    <bundle>mvn:org.hibernate/hibernate-osgi/4.2.7.Final</bundle>
  </feature>

</features>